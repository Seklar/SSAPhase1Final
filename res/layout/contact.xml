<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context="com.example.test.FullscreenActivity" >

    <!--
         The primary full-screen view. This can be replaced with whatever view
         is needed to present your content, e.g. VideoView, SurfaceView,
         TextureView, etc.
    -->


    <!--
         This FrameLayout insets its children based on system windows using
         android:fitsSystemWindows.
    -->


    <!-- contacts screen 1 -->
    <!-- this is logo 3 -->

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="137dp"
        android:layout_height="67dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/s_s_a___s_s_a_1" />

    <!-- this is travel small button -->

    <Button
        android:id="@+id/travel_small"
        android:layout_width="56dp"
        android:layout_height="37dp"
        android:layout_marginLeft="26dp"
        android:layout_marginTop="145dp"
        android:background="@drawable/aboutscreen___travel_1"
        android:onClick="TravelPage" />

    <!-- this is contact topbar -->

    <Button
        android:id="@+id/ice_contacts_topbar"
        android:layout_width="221dp"
        android:layout_height="39dp"
        android:layout_marginLeft="101dp"
        android:layout_marginTop="104dp"
        android:background="@drawable/i_" />

    <!-- this is ice contacts small button -->

    <Button
        android:id="@+id/ice_small"
        android:layout_width="57dp"
        android:layout_height="37dp"
        android:layout_marginLeft="26dp"
        android:layout_marginTop="185dp"
        android:background="@drawable/travel__contacts_1" />

    <!-- this is maps small button -->

    <Button
        android:id="@+id/map_small"
        android:layout_width="56dp"
        android:layout_height="36dp"
        android:layout_marginLeft="26dp"
        android:layout_marginTop="225dp"
        android:background="@drawable/travel__map_1"
        android:onClick="MapPage" />

    <!-- this is call emergency small button -->

    <Button
        android:id="@+id/call_small"
        android:layout_width="56dp"
        android:layout_height="37dp"
        android:layout_marginLeft="26dp"
        android:layout_marginTop="305dp"
        android:background="@drawable/travel__callemergencyicon_1"
        android:onClick="callEMServices" />

    <!-- this is in danger text -->

    <TextView
        android:id="@+id/dangertext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="425dp"
        android:text="IN DANGER - Emergency"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#FF0000"
        android:textStyle="bold" />

    <!-- this is emergncy button -->

    <Button
        android:id="@+id/emergency"
        android:layout_width="360dp"
        android:layout_height="44dp"
        android:layout_marginLeft="-1dp"
        android:layout_marginTop="450dp"
        android:background="@drawable/emergency_alert___emergency_bar_1"
        android:onClick="callEMServices" />

    <!-- this is about small button -->

    <Button
        android:id="@+id/about_small"
        android:layout_width="56dp"
        android:layout_height="37dp"
        android:layout_marginLeft="26dp"
        android:layout_marginTop="105dp"
        android:background="@drawable/travel__about_1"
        android:onClick="AboutPage" />

    <!-- this is alarms small button -->

    <Button
        android:id="@+id/alarm_small"
        android:layout_width="56dp"
        android:layout_height="36dp"
        android:layout_marginLeft="26dp"
        android:layout_marginTop="265dp"
        android:background="@drawable/travel__alarms_1"
        android:onClick="AlarmPage" />

            <!-- this is current contacts button -->
    <Button
        android:id="@+id/current_contacts_dark"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_marginLeft="220dp"
        android:layout_marginTop="147dp"
        android:background="@drawable/i__current_contact_1"
        android:onClick="ContactPage2" />

    <!-- this is add new contact button -->
    <Button
        android:id="@+id/add_new_contact_light"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_marginLeft="101dp"
        android:layout_marginTop="147dp"
        android:background="@drawable/i__add_new_contact_1" />

    <!-- this is case of emergency text -->
    <TextView
        android:id="@+id/case_of_emergency_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="102dp"
        android:layout_marginTop="186dp"
        android:text="Add a new in Case of Emergency"
        android:textColor="#000000"
        android:textSize="12sp" />

            <!-- this is the text for contact name -->
    <TextView
        android:id="@+id/name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="165dp"
        android:layout_marginTop="235dp"
        android:text="(I.C.E) Contact"
        android:textColor="#000000"
        android:textSize="12sp" />

            <!-- this is name of contact input -->
    <EditText
        android:id="@+id/name_person_input"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="165dp"
        android:layout_marginTop="250dp"
        android:ems="10" >

        <requestFocus />
    </EditText>

            <!-- this is the text for phone number -->
    <TextView
        android:id="@+id/phone_number_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="165dp"
        android:layout_marginTop="310dp"
        android:text="Phone Number"
        android:textColor="#000000"
        android:textSize="12sp" />

            <!-- this is the phone number input -->
    <EditText
        android:id="@+id/phone_number_input"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="165dp"
        android:layout_marginTop="318dp"
        android:inputType="phone"
        android:ems="10" />
    
        <!-- this is add contact button -->
    <Button
        android:id="@+id/add_contact_button"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_marginLeft="222dp"
        android:layout_marginTop="380dp"
        android:background="@drawable/i__add_contact_1"
        android:onClick="AddContact" />

            <!-- this is ice text -->
    <TextView
        android:id="@+id/ice_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="102dp"
        android:layout_marginTop="199dp"
        android:text="(I.C.E) Contact"
        android:textColor="#000000"
        android:textSize="12sp" />

        <!-- this is pic of person -->
    <ImageView
        android:id="@+id/pic_of_person"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginLeft="103dp"
        android:layout_marginTop="230dp"
        android:src="@drawable/icecontacts__faceicon_1" />

            <!-- this is pic of phone -->
    <ImageView
        android:id="@+id/phone_image"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginLeft="103dp"
        android:layout_marginTop="300dp"
        android:src="@drawable/icecontacts__phone_1" />

</FrameLayout>