<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
    <FrameLayout

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff" >

    <!--
         The primary full-screen view. This can be replaced with whatever view
         is needed to present your content, e.g. VideoView, SurfaceView,
         TextureView, etc.
    -->

    <!--
         This FrameLayout insets its children based on system windows using
         android:fitsSystemWindows.
    -->
	<!-- this is logo 1 -->
	<ImageView
	    android:id="@+id/imageView1"
	    android:layout_width="137dp"
	    android:layout_height="67dp"
	    android:layout_marginLeft="25dp"
	    android:layout_marginTop="20dp"
	    android:src="@drawable/s_s_a___s_s_a_1" />
    
	 <!-- this is about light small button -->
	 <Button
	     android:id="@+id/light_about"
	     android:layout_width="56dp"
	     android:layout_height="37dp"
	     android:layout_marginLeft="26dp"
	     android:layout_marginTop="105dp"
	     android:background="@drawable/aboutscreen___about_light_1" />
	
    <!-- this is travel small button -->

    <Button
        android:id="@+id/travel_small"
        android:layout_width="56dp"
        android:layout_height="37dp"
        android:layout_marginLeft="26dp"
        android:layout_marginTop="145dp"
        android:background="@drawable/aboutscreen___travel_1"
        android:onClick="TravelPage" />
    
    <!-- this is about text topbar -->
    <Button
        android:id="@+id/abouttopbar"
        android:layout_width="221dp"
        android:layout_height="39dp"
        android:layout_marginLeft="101dp"
        android:layout_marginTop="104dp"
        android:background="@drawable/about_bar_1" />
    
    <!-- this is ice contacts small button -->

    <Button
        android:id="@+id/ice_small"
        android:layout_width="57dp"
        android:layout_height="37dp"
        android:layout_marginLeft="26dp"
        android:layout_marginTop="185dp"
        android:background="@drawable/travel__contacts_1"
        android:onClick="ContactPage" />
    
    <!-- this is maps small button -->

    <Button
        android:id="@+id/map_small"
        android:layout_width="56dp"
        android:layout_height="36dp"
        android:layout_marginLeft="26dp"
        android:layout_marginTop="225dp"
        android:background="@drawable/travel__map_1"
        android:onClick="MapPage" />
    
    <!-- this is alarms small button -->

    <Button
        android:id="@+id/alarms_small"
        android:layout_width="56dp"
        android:layout_height="37dp"
        android:layout_marginLeft="26dp"
        android:layout_marginTop="265dp"
        android:background="@drawable/travel__alarms_1"
        android:onClick="TravelPage" />
    
    <!-- this is call emergency small button -->

    <Button
        android:id="@+id/call_small"
        android:layout_width="56dp"
        android:layout_height="37dp"
        android:layout_marginLeft="26dp"
        android:layout_marginTop="305dp"
        android:background="@drawable/travel__callemergencyicon_1"
        android:onClick="callEMServices" />

    <!-- this is in danger text -->
    <TextView
        android:id="@+id/dangertext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="425dp"
        android:text="IN DANGER - Emergency"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#FF0000" />
    
    <!-- this is emergncy button -->
    <Button
        android:id="@+id/emergency"
        android:layout_width="360dp"
        android:layout_height="44dp"
        android:layout_marginLeft="-1dp"
        android:layout_marginTop="450dp"
        android:background="@drawable/emergency_alert___emergency_bar_1"
        android:onClick="callEMServices" />

    <!-- this is about text -->

    <TextView
        android:id="@+id/about_text"
        android:layout_width="200dp"
        android:layout_height="156dp"
        android:layout_marginLeft="103dp"
        android:layout_marginTop="148dp"
        android:text="@string/about_string_text"
        android:textColor="#000000"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/TextView01"
        android:layout_width="192dp"
        android:layout_height="40dp"
        android:layout_marginLeft="103dp"
        android:layout_marginTop="290dp"
        android:text="@string/about_string_text2"
        android:textColor="#000000"
        android:textSize="12sp" />

        <TextView
            android:id="@+id/TextView02"
            android:layout_width="192dp"
            android:layout_height="51dp"
            android:layout_marginLeft="103dp"
            android:layout_marginTop="330dp"
            android:text="@string/about_string_text3"
            android:textColor="#000000"
            android:textSize="12sp" />

</FrameLayout>
<FrameLayout android:layout_height="wrap_content"
             android:layout_width="wrap_content"
             android:id="@+id/fragment_container"
        />
</RelativeLayout>